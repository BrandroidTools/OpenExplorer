<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    
   
	<RelativeLayout
		android:id="@+id/frag_holder"
	    android:orientation="horizontal"
	    android:layout_below="@+id/content_pager_indicator_frame"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/frag_log"
	    android:baselineAligned="false">
	    
	    
	    <FrameLayout android:id="@+id/list_frag"
	        android:layout_width="@dimen/bookmarks_width"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:background="?attr/colorDarkGray"
	        android:layout_alignWithParentIfMissing="true"
	       	/>
	    
		<FrameLayout
		    android:id="@+id/content_pager_indicator_frame"
		    android:layout_height="40dp"
			android:layout_width="match_parent"
			android:layout_alignParentTop="true"
			android:background="?attr/pagerBackground"
			android:layout_alignLeft="@+id/list_frag_frame"
			android:layout_alignWithParentIfMissing="true">
	
			<com.viewpagerindicator.TabPageIndicator
				android:id="@+id/content_pager_indicator"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				/>
		</FrameLayout>
		
	    <RelativeLayout
	        android:id="@+id/list_frag_frame"
	        android:layout_toRightOf="@+id/list_frag"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/content_pager_indicator_frame"
	        >	
		    <FrameLayout
		        android:id="@+id/content_frag"
		    	android:layout_height="match_parent"
		    	android:layout_width="match_parent"
		    	/>
	
		    <ViewStub
		        android:id="@+id/content_pager_frame_stub"
		        android:layout="@layout/viewpager"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        />
		</RelativeLayout>
	
	
	</RelativeLayout>
	
</RelativeLayout>